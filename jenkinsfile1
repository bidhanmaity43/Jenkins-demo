pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                echo 'Hello Test'
            }
        }

        stage('Build') {
            steps {
                echo 'Hello from Build'
            }
        }

        stage('Deploy Test') {
            steps {
                echo 'Hello from Deploy Test'
            }
        }

        stage('Prod') {
            steps {
                echo 'Hello from Prod'
            }
        }
    }

    post {
        always {
            echo 'This will run ALWAYS (success or failure)'
        }

        success {
            echo 'Pipeline completed SUCCESSFULLY üéâ'
        }

        failure {
            echo 'Pipeline FAILED ‚ùå'
        }
    }
}
